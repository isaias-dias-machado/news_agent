{
  "workspace_copy": [
    "deps"
  ],
  "plugins": [
    {
      "name": "telegram_https_client_bridge",
      "type": "docker",
      "scope": "shared",
      "image": "telegram_https_client_bridge",
      "args": [
        "-e",
        "TELEGRAM_API_ID",
        "-e",
        "TELEGRAM_API_HASH",
        "-e",
        "TELEGRAM_PHONE",
        "-e",
        "TELEGRAM_LOGIN_CODE",
        "-e",
        "TELEGRAM_BRIDGE_HOST=0.0.0.0",
        "-e",
        "TELEGRAM_BRIDGE_PORT=8081",
        "-e",
        "TELEGRAM_SESSION_DIR=/data",
        "-v",
        "/home/isaias/hacking/news_agent/services/telegram_https_client_bridge/session:/data",
        "-p",
        "127.0.0.1:8088:8081"
      ]
    },
    {
      "name": "news_agent",
      "type": "process",
      "cmd": "bash -lc 'export PATH=\"$HOME/.asdf/shims:$PATH\"; source \"$HOME/.env\"; mix run --no-halt'"
    }
  ]
}
